<style>
    @media only screen and (max-width: 768px) {
        .container-fluid {
            overflow-x: scroll;
        }
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1 toHide"></div>
        <div class="col-md-10">
            
            {{> superUser/_error}}

            <table class="table table-striped table-hover" id="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">City</th>
                        <th scope="col">District</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Last Login</th>
                        <th scope="col" class="text-center">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each admin}}
                    <tr>
                        <th style="vertical-align: middle;" scope="row">
                        {{#if this.profileImg}}
                            <img src="{{this.profileImg}}" alt="profile image" width="34" height="34" class="rounded-circle">
                        {{else}}
                            <img src="/images/Logo-light.svg" alt="profile default image" width="34" height="34" class="rounded-circle">
                        {{/if}}
                        </th>
                        <td style="vertical-align: middle;">{{this.name}}</td>
                        <td style="vertical-align: middle;">{{this.email}}</td>
                        <td style="vertical-align: middle;">{{formatPhone this.phone}}</td>
                        <td style="vertical-align: middle;">{{captalize this.city}}</td>
                        <td style="vertical-align: middle;">{{captalize this.district}}</td>
                        <td style="vertical-align: middle;">{{{formatDate this.createdTime}}}</td>
                        <td style="vertical-align: middle;">
                            {{#if  this.lastLogin}}
                                {{{formatDate this.lastLogin}}}
                            {{else}}
                                Null
                            {{/if}}
                        </td>
                        <td style="vertical-align: middle;" class="text-center">
                            <a href="/superUser/viewUser/{{this._id}}" class="btn btn-link">View</a>
                            <a href="/superUser/editUser/{{this._id}}" class="btn btn-link">Edit</a>
                            <a href="#" onclick="confirmDelete(event, '/superUser/removeUser/{{this._id}}', '{{this.name}}')" class="btn btn-link">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-md-1 toHide"></div>
    </div>
</div>